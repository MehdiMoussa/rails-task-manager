<h1>Index Tasks</h1>

<% @tasks.each do |task| %>
<p><% if task.completed == true%>
 <i class="far fa-check-square"></i>
 <%else%>
  <i class="far fa-square"></i>
 <% end %>


  <%= task.id %>
  <%= link_to task.title, task_path(task) %></p>

<% end %>


<%= link_to "Add a new task",  tasks_new_path(@tasks) %>

